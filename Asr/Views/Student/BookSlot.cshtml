@model Asr.Models.Slot

@{
    ViewData["Title"] = "Edit";
}

<h1>Book Student</h1>

<h4>Slot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookSlot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomID" class="control-label"></label>
                <input type="hidden" asp-for="RoomID" class="form-control" />
                <div> @Html.DisplayFor(model => model.RoomID)</div>             
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input type="hidden" asp-for="StartTime" class="form-control" />
                <div>@Html.DisplayFor(model => model.StartTime)</div> 
            </div>
            <div class="form-group">
                <label asp-for="StaffID" class="control-label"></label>
                <input type="hidden" asp-for="StaffID" class="form-control" />
                <div>@Html.DisplayFor(model => model.StaffID)</div>
            </div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
                <span asp-validation-for="StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Book" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}