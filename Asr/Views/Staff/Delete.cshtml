@model Asr.Models.Slot

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Slot</h1>
@if (string.IsNullOrEmpty(Model.StudentID))
{
    <h3>Are you sure you want to delete this?</h3>
}
else
{
    <h3>Cannot delete slot as slot is already booked by a student</h3>
}
<div>
    <h4>Slot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.RoomID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.StaffID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.StudentID)
        </dd>
    </dl>

    @if (string.IsNullOrEmpty(Model.StudentID))
    {
        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="RoomID" />
            <input type="hidden" asp-for="StartTime" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        <a asp-action="Index">Back to List</a>
    }

</div>
